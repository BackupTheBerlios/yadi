#configure()

cd $CVS/cdk/
./autogen.sh
./configure --prefix=$DBOX --with-cvsdir=$CVS --enable-maintainer-mode --disable-libcrypto --with-targetruleset=flash

# Kernel-Verzeichnisse erstellen
make .deps/linuxdir
