#patch_cvs()

 # Flash-Patch
 patch -N -p0 $CVS/cdk/linux-2.4.25/drivers/mtd/maps/dbox2-flash.c $CHANGE_DIR/Patches/dbox2-flash.c.diff
 # Patch fuer u-boot 1.0.2
 mv $CVS/boot/u-boot $CVS/boot/u-boot.old
 if [ ! -d $ROOT/patches ]; then
  mkdir $ROOT/patches
 fi
 cd $ROOT/patches
 PATCH=uboot102
 if [ ! -e $ROOT/patches/.$PATCH ]; then
  cp $CHANGE_DIR/uboot/$PATCH.tar.gz $ROOT/patches
  gunzip -d $ROOT/patches/$PATCH.tar.gz
  tar -xvf $ROOT/patches/$PATCH.tar
  touch $ROOT/patches/.$PATCH
 fi
 ln -s $ROOT/patches/u-boot-1.0.2 $CVS/boot/u-boot

 # Patch fuer 1xI (im CVS)
 cp $CVS/cdk/Patches/u-boot.1x-flash.dbox2.h $CVS/boot/u-boot/include/configs/dbox2.h
 # Die Datei aus dem CVS fuer JFFS2-Only patchen
 patch -N -p0 $CVS/boot/u-boot/include/configs/dbox2.h $CHANGE_DIR/Patches/dbox2.h.neu.diff
 # DVR in Enigma aktivieren
 patch -N -p0 $CVS/apps/tuxbox/enigma/lib/dvb/servicedvb.cpp $CHANGE_DIR/enigma/servicedvb.diff
 cp -f $CHANGE_DIR/enigma/info.cpp $CVS/apps/tuxbox/enigma/lib/system/
