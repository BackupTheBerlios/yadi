# Linux-Kernel konfigurieren
cp $CHANGE_DIR/Configs/linux_config.squashfs $CVS/cdk/linux/.config
cp $CHANGE_DIR/Patches/dbox2-flash.squashfs.c $CVS/cdk/linux/drivers/mtd/maps/dbox2-flash.c

cd $CVS/cdk
rm .deps/linuxkernel
make .deps/linuxkernel

mkdir $DBOX/cdkflash/kernel
cp $DBOX/tftpboot/kernel-cdk $DBOX/cdkflash/kernel/vmlinuz
rm $DBOX/cdkflash/root/vmlinuz
